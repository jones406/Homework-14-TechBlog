<div class="row">
  <div class="col-auto">
    <h2>{{name}}!</h2>
  </div>
</div>

<p>{{post_content}}</p>
<p id="postid">{{id}}</p>
<p>{{user.username}} on {{format_date date_created}}</p>
<h3>Comments</h3>
{{#each comments as |comment|}}
<div class="card" id="maybeComments">
  <h4>{{comment.comment_text}}</h4>
  <div id="userCards">
    <ul>
      <li>{{format_date comment.date_created}}</li>
      <li>by the one and only {{comment.user.username}}</li>
    </ul>
  </div>
</div>
{{/each}}
</div>
<h3>Be part of the herd!</h3>
<form class="form-group">
  <div class="form-group">
    <label for="comment">comment:</label>
    <input class="form-input" type="text" id="comment" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit" id="submit-btn">Comment</button>
  </div>
</form>

<script src="/js.comment.js"></script>